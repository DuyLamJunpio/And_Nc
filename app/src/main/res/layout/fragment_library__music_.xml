<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_music"
    tools:context=".Fragment.Fragment_Music.Library_Music_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#65000000"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/favourites_"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/border_text_favourites"
            android:gravity="center"
            android:text="My Music"
            android:textAppearance="@style/favourites_"
            android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:padding="10dp"
            android:id="@+id/idRcvMusic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>

</FrameLayout>