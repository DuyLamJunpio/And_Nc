<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7A53E8"
    android:id="@+id/idAccount_Fragment"
    tools:context=".Fragment.Diff_Fragment.Account_Fragment">

    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/idProgressBarAcc"
        style="@android:style/Animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:progress="25"/>

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgAvtUser"
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name :"
                android:textSize="20dp"
                android:textColor="#99FFFFFF"/>

            <TextView
                android:id="@+id/userNameAcc"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ten Dang Nhap"
                android:textSize="20dp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pass Word :"
                android:textSize="20dp"
                android:textColor="#99FFFFFF"/>

            <TextView
                android:id="@+id/userPassAcc"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mat khau"
                android:textSize="20dp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvLogOut"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Log Out"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/border_login"/>


    </LinearLayout>

</FrameLayout>